<Window x:Class="WPFDemo.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFDemo" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Main Window" Width="400"
        Height="300"
        Style="{StaticResource AllWindows}"
        mc:Ignorable="d">
  <ScrollViewer>
    <StackPanel>
      <Button Name="ScreenshotButton" Click="ScreenshotButton_Click"
              Style="{StaticResource ButtonDefault}">
        Screenshotmanager demo
      </Button>
      <Button Name="TreeViewButton" Click="TreeViewButton_Click"
              Style="{StaticResource ButtonDefault}">
        Tree builder demo
      </Button>
      <Button Name="AboutButton" Style="{StaticResource ButtonDefault}">About button demo</Button>
    </StackPanel>
  </ScrollViewer>
</Window>
