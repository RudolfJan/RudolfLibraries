<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
          mc:Ignorable="d"
        Style="{StaticResource AllWindows}" 
       Title="Main Window" Width="400" Height="300">
	<ScrollViewer>
	<StackPanel>
			<Button Name="ScreenshotButton" Style="{StaticResource ButtonDefault}" Click="ScreenshotButton_Click">Screenshotmanager demo</Button>
			<Button Name="TreeViewButton" Style="{StaticResource ButtonDefault}" Click="TreeViewButton_Click">Tree builder demo</Button>
			<Button Name="AboutButton" Style="{StaticResource ButtonDefault}">About button demo</Button>
		</StackPanel>
	</ScrollViewer>
</Window>
