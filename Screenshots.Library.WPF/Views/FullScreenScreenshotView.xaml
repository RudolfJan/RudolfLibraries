<Window x:Class="Screenshots.Library.WPF.Views.FullScreenScreenshotView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screenshots.Library.WPF.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState= "Maximized"
        ShowInTaskbar= "false"
        Title="{Binding}" Height="450" Width="800" PreviewKeyUp="OnKeyPressed">
    <StackPanel>
		<Image Source="{Binding}" KeyUp="OnKeyPressed" MouseLeftButtonUp="OnMouseUp" />
    </StackPanel>
</Window>
